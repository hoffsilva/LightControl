<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/svQuestIndiv"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:fillViewport="true"
    tools:context="com.example.hoffsilva.lightcontrol.BedRoomActivity">

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:orientation="vertical"
                android:background="@drawable/qaurto"
                android:paddingBottom="10dp"
                android:paddingTop="10dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="40dp"
                    android:text="Quarto"
                    android:textColor="@android:color/background_light"
                    android:gravity="center"
                    android:layout_gravity="center"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="10dp"
                android:paddingTop="10dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="20dp"
                    android:text="Configuracoes/Comandos"
                    android:textColor="@android:color/darker_gray"
                    android:gravity="center"
                    android:layout_gravity="center"/>

            </LinearLayout>

            <GridLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:layout_gravity="center"
                >

                <RelativeLayout
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_column="1"
                    android:layout_row="1"
                    android:padding="3dp">

                    <Button
                        android:id="@+id/cena1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@android:color/holo_green_dark"
                        android:elevation="0dp"
                        android:text="C1"
                        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                        android:textColor="@android:color/background_light"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_column="2"
                    android:layout_row="1"
                    android:padding="3dp">

                    <Button
                        android:id="@+id/cena2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@android:color/holo_green_dark"
                        android:elevation="0dp"
                        android:text="C2"
                        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                        android:textColor="@android:color/background_light"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_column="3"
                    android:layout_row="1"
                    android:padding="3dp">

                    <Button
                        android:id="@+id/cena3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@android:color/holo_green_dark"
                        android:elevation="0dp"
                        android:text="C3"
                        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                        android:textColor="@android:color/background_light"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_column="4"
                    android:layout_row="1"
                    android:padding="3dp">

                    <Button
                        android:id="@+id/cena4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@android:color/holo_green_dark"
                        android:elevation="0dp"
                        android:text="C4"
                        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                        android:textColor="@android:color/background_light"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_column="5"
                    android:layout_row="1"
                    android:padding="3dp">

                    <Button
                        android:id="@+id/cena5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@android:color/holo_green_dark"
                        android:elevation="0dp"
                        android:text="C5"
                        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                        android:textColor="@android:color/background_light"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_column="1"
                    android:layout_row="2"
                    android:padding="3dp">

                    <Button
                        android:id="@+id/cena6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@android:color/holo_green_dark"
                        android:elevation="0dp"
                        android:text="C6"
                        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                        android:textColor="@android:color/background_light"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:padding="3dp"
                    android:layout_column="2"
                    android:layout_row="2">

                    <Button

                        android:id="@+id/cena7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@android:color/holo_green_dark"
                        android:elevation="0dp"
                        android:text="C7"
                        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                        android:textColor="@android:color/background_light"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:padding="3dp"
                    android:layout_column="3"
                    android:layout_row="2">

                    <Button
                        android:id="@+id/cena8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_gravity="center"
                        android:background="@android:color/holo_green_dark"
                        android:elevation="0dp"
                        android:text="C8"
                        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                        android:textColor="@android:color/background_light"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:padding="3dp"
                    android:layout_column="4"
                    android:layout_row="2">

                    <Button
                        android:id="@+id/cena9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@android:color/holo_green_dark"
                        android:elevation="0dp"
                        android:text="C9"
                        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                        android:textColor="@android:color/background_light"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:padding="3dp"
                    android:layout_column="5"
                    android:layout_row="2"
                    android:layout_gravity="center"
                    android:gravity="center">

                    <Switch
                        android:id="@+id/switch_config"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textColorHint="@android:color/holo_green_light" />
                </RelativeLayout>


            </GridLayout>

            <RelativeLayout
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:padding="10dp"
                android:layout_column="1"
                android:layout_row="3"
                android:layout_gravity="center"
                android:gravity="center">

                <Button
                    android:id="@+id/setorAll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@android:color/holo_green_dark"
                    android:elevation="0dp"
                    android:text="Ligar Todos"
                    android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                    android:textColor="@android:color/background_light"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="10dp"
                android:paddingTop="10dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="0dp"
                    android:text="Setores"
                    android:textColor="@android:color/darker_gray"
                    android:gravity="center"
                    android:layout_gravity="center"/>

            </LinearLayout>

            <!--Setores-->

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:orientation="vertical"
                android:layout_gravity="center">


                //botao 1 com seekbar - slider

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_row="3"
                    android:orientation="horizontal"
                    android:padding="20dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="1"
                        android:layout_row="3"
                        android:orientation="vertical"
                        android:padding="20dp">

                       <RelativeLayout
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content">
                           <Button
                               android:id="@+id/setor1"
                               android:layout_width="80dp"
                               android:layout_height="80dp"
                               android:layout_gravity="center"
                               android:background="@drawable/light_on"
                               android:elevation="0dp"
                               android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                               android:textColor="@color/colorPrimary"
                               android:textSize="30sp"
                               android:textStyle="bold"
                               android:alpha="0"
                               />
                           <ImageView
                               android:id="@+id/foregroundSetor1"
                               android:layout_width="80dp"
                               android:layout_height="80dp"
                               android:background="@drawable/light_off"
                               android:layout_weight="0"
                               />


                       </RelativeLayout>

                        <TextView
                            android:id="@+id/textView2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignBottom="@+id/setor3"
                            android:layout_centerHorizontal="true"
                            android:layout_gravity="center"
                            android:gravity="end"
                            android:text="Setor 1"
                            android:textAlignment="center"
                            android:textColor="@color/colorPrimary" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="vertical"
                        android:padding="2dp">

                        <SeekBar
                            android:id="@+id/seekSetor1"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="Controle de luminosidade"
                            android:textColor="@color/colorPrimary" />
                    </LinearLayout>


                </LinearLayout>


                //botao 2 com seekbar - slider
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_column="1"
                    android:layout_row="3"
                    android:padding="20dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_column="1"
                        android:layout_row="3"
                        android:padding="20dp">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <Button
                                android:id="@+id/setor2"
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:layout_gravity="center"
                                android:background="@drawable/light_on"
                                android:elevation="0dp"
                                android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:alpha="0"/>

                            <ImageView
                                android:id="@+id/foregroundSetor2"
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:background="@drawable/light_off"
                                android:layout_weight="0"
                                />

                        </RelativeLayout>

                        <TextView
                            android:id="@+id/textView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignBottom="@+id/setor3"
                            android:layout_centerHorizontal="true"
                            android:layout_gravity="center"
                            android:gravity="end"
                            android:text="Setor 2"
                            android:textAlignment="center"
                            android:textColor="@color/colorPrimary" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="2dp"
                        android:layout_gravity="center">

                        <SeekBar
                            android:id="@+id/seekSetor2"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Controle de luminosidade"
                            android:layout_gravity="center"
                            android:textColor="@color/colorPrimary"/>
                    </LinearLayout>




                </LinearLayout>

                <GridLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:layout_gravity="center">


                    <LinearLayout
                        android:layout_width="80dp"
                        android:layout_height="110dp"
                        android:layout_column="1"
                        android:layout_gravity="center"
                        android:layout_row="1"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="3dp">

                        <Button
                            android:id="@+id/setor3"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_gravity="center"
                            android:background="@drawable/light_off"
                            android:elevation="0dp"
                            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBottom="@+id/setor3"
                            android:layout_centerHorizontal="true"
                            android:layout_gravity="center"
                            android:gravity="end"
                            android:text="Setor 3"
                            android:textAlignment="center"
                            android:textColor="@color/colorPrimary" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="80dp"
                        android:layout_height="110dp"
                        android:layout_column="2"
                        android:layout_gravity="center"
                        android:layout_row="1"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="3dp">

                        <Button
                            android:id="@+id/setor4"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_gravity="center"
                            android:background="@drawable/light_off"
                            android:elevation="0dp"
                            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBottom="@+id/setor3"
                            android:layout_centerHorizontal="true"
                            android:layout_gravity="center"
                            android:gravity="end"
                            android:text="Setor 4"
                            android:textAlignment="center"
                            android:textColor="@color/colorPrimary" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="80dp"
                        android:layout_height="110dp"
                        android:layout_column="3"
                        android:layout_gravity="center"
                        android:layout_row="1"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="3dp">

                        <Button
                            android:id="@+id/setor5"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_gravity="center"
                            android:background="@drawable/light_off"
                            android:elevation="0dp"
                            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBottom="@+id/setor3"
                            android:layout_centerHorizontal="true"
                            android:layout_gravity="center"
                            android:gravity="end"
                            android:text="Setor 5"
                            android:textAlignment="center"
                            android:textColor="@color/colorPrimary" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="80dp"
                        android:layout_height="110dp"
                        android:layout_column="4"
                        android:layout_gravity="center"
                        android:layout_row="1"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="3dp"
                        android:paddingBottom="50dp">

                        <Button
                            android:id="@+id/setor6"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_gravity="center"
                            android:background="@drawable/light_off"
                            android:elevation="0dp"
                            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBottom="@+id/setor3"
                            android:layout_centerHorizontal="true"
                            android:layout_gravity="center"
                            android:gravity="end"
                            android:text="Setor 6"
                            android:textAlignment="center"
                            android:textColor="@color/colorPrimary" />
                    </LinearLayout>


                </GridLayout>




            </LinearLayout>

        </LinearLayout>



    </ScrollView>

</LinearLayout>


